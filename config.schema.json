{
  "pluginAlias": "Thermostat",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "<p align='center'>Thermostat</p>",
  "footerDisplay": "Please raise any issues on our [project page](https://github.com/chazepps/homebridge-thermostat/issues).",
  "schema": {
    "type": "object",
    "properties": {
      "motorIp": {
        "title": "Motor IP",
        "type": "string",
        "required": true,
        "default": "10.10.8.1"
      },
      "sensorIp": {
        "title": "Sensor IP",
        "type": "string",
        "required": true,
        "default": "10.10.8.2"
      }
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "Thermostat Info",
      "expandable": true,
      "expanded": false,
      "items": [
        "motorIp",
        "sensorIp"
      ]
    }
  ]
}